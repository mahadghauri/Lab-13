@page "/"

<PageTitle>Home</PageTitle>

<h1><strong>Hello , World !</strong></h1>
<br />

<form>
    <br><br><br>
    <center>

            <label for="name"> <strong> Name:</strong></label>
            <input type="text" name="myName" id="name">

            <br><br>

            <label for="roll"> <strong> Roll Number:</strong></label>
            <input type="text" name="myRollNumber" id="roll">

            <br><br>

            <label for="email"> <strong>Email:</strong></label>
            <input type="email" name="myEmail" id="email">

            <br><br>

            <label for="male"> <strong>Gender:</strong> Male</label>
            <input type="radio" name="myGender" id="male">
            <label for="female"> Female</label>
            <input type="radio" name="myGender" id="female">

            <br><br>


            <div>
                <label for="yourself"><strong>Write about yourself</strong></label><br>
                <textarea name="myText" id="yourself" cols="100" rows="10"></textarea>
            </div>

            <br><br>

            <div>
                <label for="car"> <strong>Car</strong></label>
                <select name="myCar" id="car">
                    <option value="Toyota"> Grande</option>
                    <option value="Honda"> Civic</option>
                    <option value="Suzuki" selected> Alto</option>
                </select>
                <select name="myModel" id="model">
                    <option value="generation">10th generation</option>
                    <option value="generation" selected>11th generation</option>
                    <option value="generation">12th generation</option>
                </select>

            </div>

            <br><br>

            <input type="submit" value="Submit Now">
            <input type="reset" value="Reset Now">

    </center>
</form>

